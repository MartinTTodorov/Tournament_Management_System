@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="right">

    @for (int i = 0; i<@Model.Tournaments.Count; i++)
    {
        <div class="tournament">

                <div class="tournament-text">
                    <a href="/TournamentPage?ID=@Model.Tournaments[i].ID" class="tournament-title">Tournament @Model.Tournaments[i].ID @Model.Tournaments[i].Title</a>
                    <p>From @Model.Tournaments[i].EndDate.ToShortDateString() to @Model.Tournaments[i].EndDate.ToShortDateString()</p>
                </div>
        </div>
    }

</div>
